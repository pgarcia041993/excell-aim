<%= form_for(@registration_transaction) do |f| %>
    <% if @registration_transaction.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@registration_transaction.errors.count, "error") %> prohibited this registration_transaction
            from being saved:</h2>

          <ul>
            <% @registration_transaction.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div style="width: 400px;">

      <div class="input-control text" style="margin-bottom: 40px; margin-left: 10px;">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
        <br/>
      <div class="input-control text" style="margin-bottom: 40px; margin-left: 10px;">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="input-control text" style="margin-bottom: 40px; margin-left: 10px;">
        <%= f.label :invoice_number %>
        <%= f.text_field :invoice_number %>
      </div>
      <div class="input-control text" style="margin-bottom: 40px; margin-left: 10px;">
        <%= f.label :invoice_amount %>
        <%= f.text_field :invoice_amount %>
      </div>
      <div class="input-control text" style="margin-bottom: 70px; margin-left: 10px;">
        <%= f.label :particulars %>
        <%= f.text_area :particulars, cols: 54, rows: 4 %>
      </div>
        <br/>
      <div class="input-control select" style="margin-bottom: 40px; margin-left: 10px;">
        <label for="program_id">Select Program</label>
        <select name="registration_transaction[program_id]" id="program_id">
          <%= Program.all.each do |program| %>
              <option value="<%= program.id %>"><%= program.name %></option>
          <% end %>
        </select>
      </div>

      <br/>

      <div class="actions" style="margin-left: 10px;">
        <%= f.submit :class => 'button success' %>
      </div>
    </div>
<% end %>
